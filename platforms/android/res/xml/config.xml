<?xml version='1.0' encoding='utf-8'?>
<widget id="org.basislager.videoscplus" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="VideoCapture">
        <param name="android-package" value="org.basislager.videocapture.VideoCapture" />
    </feature>
    <feature name="OSC">
        <param name="android-package" value="nl.sylvain.cordova.osc.OSCUtils" />
    </feature>
    <feature name="KeepScreenOn">
        <param name="android-package" value="com.mediamatrixdoo.keepscreenon.KeepScreenOn" />
    </feature>
    <name>VideOSC+</name>
    <description>
		An experimental OSC-controller built with phonegap.
	</description>
    <author email="stefan@basislager.org" href="http://pustota.basislager.org">
		Stefan Nussbaumer
	</author>
    <content src="index.html" />
    <preference name="fullscreen" value="true" />
    <preference name="orientation" value="landscape" />
    <access origin="*" />
</widget>
